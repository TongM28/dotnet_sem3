@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-user-times me-2"></i>Delete Employee
                </h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                </h4>
                <p>Are you sure you want to permanently delete employee <strong>@Model.Name</strong> (ID: @Model.EmployeeId)?</p>
                <hr>
                <p class="mb-0">This action cannot be undone. All employee records will be permanently removed from the system.</p>
            </div>

            <div class="employee-details">
                <div class="row g-3">
                    <!-- Column 1 -->
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Employee ID</span>
                            <span class="detail-value">@Model.EmployeeId</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Name</span>
                            <span class="detail-value">@Model.Name</span>
                        </div>
                    </div>

                    <!-- Column 2 -->
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Department</span>
                            <span class="detail-value">@Model.Department</span>
                        </div>
                        <div class="detail-item">
                            <span class="span class="detail-label">Position</span>
                            <span class="detail-value">@Model.Position</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-danger {
            border: 1px solid #dc3545;
        }

        .employee-details {
            margin: 1.5rem 0;
        }

        .detail-item {
            padding: 0.75rem;
            border-radius: 0.5rem;
            background-color: #f8f9fa;
            margin-bottom: 1rem;
        }

        .detail-label {
            display: block;
            font-weight: 600;
            color: #6c757d;
            font-size: 0.875rem;
        }

        .detail-value {
            display: block;
            font-size: 1.1rem;
            color: #212529;
        }

        .alert-warning {
            border-left: 4px solid #ffc107;
        }

        @@media (max-width: 767.98px) {
            .detail-item {
                padding: 0.5rem;
            }

            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}