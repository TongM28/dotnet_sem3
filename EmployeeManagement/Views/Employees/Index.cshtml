@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewData["Title"] = "Employees List";
}

<div class="container-fluid py-4">
    <!-- Header với tiêu đề và nút thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-users me-2"></i>Employees List
        </h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="fas fa-plus me-2"></i>Add New Employee
        </a>
    </div>

    <!-- Alert thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Bảng danh sách -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4"><i class="fas fa-id-card"></i> ID</th>
                            <th><i class="fas fa-user"></i> Employee Name</th>
                            <th><i class="fas fa-building"></i> Department</th>
                            <th><i class="fas fa-money-bill-wave"></i> Salary</th>
                            <th class="text-end pe-4"><i class="fas fa-cog"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-nowrap">@item.EmployeeId</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.EmployeeId" class="text-decoration-none">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm bg-light rounded-circle me-3">
                                                <span class="avatar-text">@item.Name[0]</span>
                                            </div>
                                            <span class="fw-medium">@item.Name</span>
                                        </div>
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary py-2 px-3">
                                        @item.Department
                                    </span>
                                </td>
                                <td class="text-success fw-bold">@item.Salary.ToString("N0") $</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-warning rounded-start-pill">
                                            <i class="fas fa-edit me-1"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-danger rounded-end-pill">
                                            <i class="fas fa-trash-alt me-1"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
        }

        .avatar-text {
            font-weight: 600;
            color: #6c757d;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .badge {
            font-weight: 500;
            letter-spacing: 0.5px;
        }
    </style>
}